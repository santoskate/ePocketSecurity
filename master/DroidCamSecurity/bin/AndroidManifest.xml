<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.droidcamsecurity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk 
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="viewLayer.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="viewLayer.SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:parentActivityName="viewLayer.FullscreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.droidcamsecurity.FullscreenActivity" />
        </activity>
        <activity
            android:name="viewLayer.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:parentActivityName="viewLayer.FullscreenActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.droidcamsecurity.FullscreenActivity" />
        </activity>
        <activity
            android:name="viewLayer.AccountActivity"
            android:label="@string/title_activity_account" >
        </activity>
        <activity
            android:name="viewLayer.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>
